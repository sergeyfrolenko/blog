        <% if(!user.id && !user.login) { %>
          <div class="auth auth-login">
            <h2>Log In</h2>
            <form method="POST" action="/auth">
              <label for="login">login </label><br /><input
                type="text"
                id="login"
                name='login'
              /><br /><label for="pass">password </label><br /><input
                type="text"
                id="pass"
                name='password'
              />
              <div class="box">
                <button type="submit" class='login-btn'>Log in</button
                ><button type="submit" class="switch-button">Sign up</button>
              </div>
            </form>
          </div>
          <div class="auth auth-signin">
            <h2>Sign In</h2>
            <form method="POST" action="/auth">
              <label for="signin-login">login </label><br /><input
                type="text"
                id="signin-login"
                name='login'
              /><br />
              <label for="signin-pass">password </label><br />
              <input
               type="text"
                id="signin-pass"
                name='pass'
              /><br />
              <label for="signin-pass-check">password once again </label><br />
              <input
               type="text"
                id="signin-pass-check"
                name='passCheck'
              />
              <div class="box">
                <button type="submit" class="switch-button">Log in</button
                ><button type="submit" class='reg-btn'>Sign up</button>
              </div>
            </form>
          </div>
          <% } else { %>
        <p>
        hello, <%= user.login %>! <a href="/api/auth/logout">Log out</a>
      </p>
        <% } %>
