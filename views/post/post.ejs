<%- include('../layout/head') %>
<div class="main">
  <div class="container">
    <div class="content">

      <div class="post">
        <div class="top">
          <h2>
            <%= post.title %>
          </h2>
        </div>
        <div class="body">
          <p><%= post.body %></p>
        </div>
        <div class="bottom">
          <div class="author">
            Автор:
            <a href="/"><%= author %></a>
          </div>
          <a href="/">Комментарии</a>
        </div>
      </div>

      <div class="comments" id="<%=post.id %>">
        <h3>Комментарии</h3>
        <div class="comment-list">

          <span class="link" id="new">Оставить комментарий</span>
          <form class="comment">
            <textarea name="body"></textarea>
            <div class="buttons">
              <button class="cancel secondary">Отмена</button>
              <button class="send">Отправить</button>
            </div>
          </form>
        </div>
      </div>

    </div>

    <div class="sidebar">
      <%- include('../layout/auth') %>
      <div class="adverb">
        <h5>title adverb</h5>
        <p>text of adverb for selling many goods</p>
      </div>
    </div>
  </div>
</div>
<%- include('../layout/footer') %>