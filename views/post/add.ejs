<%- include('../layout/head') %>
<div class="main">
  <div class="container">
    <div class="content">
      <h2>Add post</h2>
      <form method="post" class='post-form'>
        <h2></h2>
        <div class="form-group">
          <label for="post-title">title</label>
          <input type="text" id="post-title" name="title" />
        </div>
        <div class="form-group post">
          <label for="post-body">text</label>
          <div class='border_wrap'>
            <div id="post-body"></div>
          </div>
        </div>
        <div class="buttons">
          <button class="save-button secondary-inverse">save note</button>
          <button class="publish-button">public</button>
        </div>
      </form>
    </div>
    <div class="sidebar">
      <%- include('../layout/auth') %>
      <div class="adverb">
        <h5>title adverb</h5>
        <p>text of adverb for selling many goods</p>
      </div>
    </div>
  </div>
</div>
<%- include('../layout/footer') %>